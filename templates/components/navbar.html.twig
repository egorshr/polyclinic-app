{# templates/components/navbar.html.twig #}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        {# Главная ссылка ("домашняя страница") теперь зависит от роли, проверяемой через сессию #}
        {% set homepage_path = (app.session.get('role') == 'ROLE_ADMIN') ? path('visit_list') : path('visit_form_show') %}
        <a class="navbar-brand" href="{{ homepage_path }}">Поликлиника</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% if app.session.get('user_id') %}

                    {# Ссылка "Запись на прием" показывается ТОЛЬКО НЕ администраторам, проверяем через сессию #}
                    {% if app.session.get('role') != 'ROLE_ADMIN' %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('visit_form_show') }}">Запись на прием</a>
                        </li>
                    {% endif %}

                    <li class="nav-item">
                        {# Текст ссылки меняется в зависимости от роли, проверяемой через сессию #}
                        {% if app.session.get('role') == 'ROLE_ADMIN' %}
                            <a class="nav-link" href="{{ path('visit_list') }}">Записи</a>
                        {% else %}
                            <a class="nav-link" href="{{ path('visit_list') }}">Мои записи</a>
                        {% endif %}
                    </li>

                {% endif %}
            </ul>
            <ul class="navbar-nav">
                {% if app.session.get('user_id') %}
                    <li class="nav-item">
                        {# Для админа просто показываем имя, для пациента - ссылка на профиль #}
                        {% if app.session.get('role') == 'ROLE_ADMIN' %}
                            <span class="nav-link me-3">{{ app.session.get('username') }} (Админ)</span>
                        {% else %}
                            <a class="nav-link me-3" href="{{ path('patient_profile_edit_form') }}">
                                {{ app.session.get('username') }}
                            </a>
                        {% endif %}
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('auth_logout') }}">Выйти</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('auth_login_form') }}">Войти</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('auth_register_form') }}">Регистрация</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>